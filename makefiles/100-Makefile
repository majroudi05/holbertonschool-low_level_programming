NAME = school
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(NAME)
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ)
%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<
clean:
	@$(RM) *~ $(NAME)
oclean:
	@$(RM) $(OBJ)
fclean: clean oclean
re: fclean all
.PHONY: all clean oclean fclean re
$(OBJ): main.h
$(MAKECMDGOALS): ;
